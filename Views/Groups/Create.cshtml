@model UniversitySystem2.Models.Group
@{
    ViewBag.Title = "Добавить группу";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card mt-4">
    <div class="card-header">Добавить группу</div>
    <div class="card-body">
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Название</label>
                <input class="form-control" type="text" name="Name" value="@Model?.Name" required />
            </div>
            <button class="btn btn-primary" type="submit">Сохранить</button>
            <a class="btn btn-secondary ms-2" href="/Groups/Index">Назад к списку</a>
        </form>
    </div>
</div>
