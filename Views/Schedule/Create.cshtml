@model UniversitySystem2.Models.Schedule
@{
    ViewBag.Title = "Добавить занятие";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card mt-4">
    <div class="card-header">Добавить занятие</div>
    <div class="card-body">
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Дата</label>
                <input class="form-control" type="date" name="Date" value="@Model?.Date.ToString("yyyy-MM-dd")" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Номер пары</label>
                <select class="form-select" name="LessonNumber" required>
                    @foreach (var lessonTime in ViewBag.LessonTimes)
                    {
                        <option value="@lessonTime.Key" @(Model?.LessonNumber == lessonTime.Key ? "selected" : "")>
                            @lessonTime.Key пара (@lessonTime.Value)
                        </option>
                    }
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label">Группа</label>
                <select class="form-select" name="GroupId" required>
                    @foreach (var group in ViewBag.Groups)
                    {
                        <option value="@group.Id">@group.Name</option>
                    }
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label">Дисциплина</label>
                <select class="form-select" name="SubjectId" required>
                    @foreach (var subject in ViewBag.Subjects)
                    {
                        <option value="@subject.Id">@subject.Name</option>
                    }
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label">Преподаватель</label>
                <select class="form-select" name="TeacherId" required>
                    @foreach (var teacher in ViewBag.Teachers)
                    {
                        <option value="@teacher.Id">@teacher.FullName</option>
                    }
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label">Аудитория</label>
                <input class="form-control" type="text" name="Room" value="@Model?.Room" />
            </div>
            <button class="btn btn-primary" type="submit">Сохранить</button>
            <a class="btn btn-secondary ms-2" href="/Schedule/Index">Назад к списку</a>
        </form>
    </div>
</div>
