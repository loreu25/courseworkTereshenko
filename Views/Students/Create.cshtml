@model UniversitySystem2.Models.Student
@{
    ViewBag.Title = "Добавить студента";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card mt-4">
    <div class="card-header">Добавить студента</div>
    <div class="card-body">
        <form method="post">
    <div class="mb-3">
        <label class="form-label">ФИО</label>
        <input class="form-control" type="text" name="FullName" value="@Model?.FullName" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Группа</label>
        <select class="form-select" name="GroupId" required>
            @foreach (var group in (ViewBag.Groups ?? new List<UniversitySystem2.Models.Group>()))
            {
                <option value="@group.Id" @(group.Id == Model?.GroupId ? "selected" : "")>@group.Name</option>
            }
        </select>
    </div>
    <hr />
    <h5>Данные для входа</h5>
    @if (ViewData.ModelState["Login"]?.Errors.Count > 0)
    {
        <div class="alert alert-danger">@ViewData.ModelState["Login"].Errors[0].ErrorMessage</div>
    }
    <div class="mb-3">
        <label class="form-label">Логин</label>
        <input class="form-control" type="text" name="Login" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Пароль</label>
        <input class="form-control" type="password" name="Password" required />
    </div>
    <button class="btn btn-primary" type="submit">Сохранить</button>
    <a class="btn btn-secondary ms-2" href="/Students/Index">Назад к списку</a>
</form>
    </div>
</div>
