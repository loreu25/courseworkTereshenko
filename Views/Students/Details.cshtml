@model UniversitySystem2.Models.Student
@{
    ViewBag.Title = "Детали студента";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card mt-4">
    <div class="card-header">Детали студента</div>
    <div class="card-body">
        <p><b>ФИО:</b> @Model.FullName</p>
        <p><b>Группа:</b> @Model.Group?.Name</p>
        <a class="btn btn-secondary" href="/Students/Index">Назад к списку</a>
    </div>
</div>
