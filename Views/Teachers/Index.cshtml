@model IEnumerable<UniversitySystem2.Models.Teacher>
@{
    ViewBag.Title = "Преподаватели";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card mt-4">
    <div class="card-header">Список преподавателей</div>
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="card-title">Список преподавателей</h2>
            <a class="btn btn-primary" href="/Teachers/Create">Добавить преподавателя</a>
        </div>
        <table class="table table-striped table-bordered table-hover">
            <thead class="table-primary">
                <tr>
                    <th>ФИО</th>
                    <th>Кафедра</th>
                    <th style="width:180px"></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var t in Model)
            {
                <tr>
                    <td>@t.FullName</td>
                    <td>@t.Department</td>
                    <td>
                        <a class="btn btn-info btn-sm" href="/Teachers/Details/@t.Id">Детали</a>
                        <a class="btn btn-warning btn-sm" href="/Teachers/Edit/@t.Id">Изменить</a>
                        <a class="btn btn-danger btn-sm" href="/Teachers/Delete/@t.Id">Удалить</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
