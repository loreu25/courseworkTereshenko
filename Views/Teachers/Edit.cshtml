@model UniversitySystem2.Models.Teacher
@{
    ViewBag.Title = "Редактировать преподавателя";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card mt-4">
    <div class="card-header">Редактировать преподавателя</div>
    <div class="card-body">
        <form method="post">
            <input type="hidden" name="Id" value="@Model.Id" />
            <div class="mb-3">
                <label class="form-label">ФИО</label>
                <input class="form-control" type="text" name="FullName" value="@Model.FullName" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Кафедра</label>
                <input class="form-control" type="text" name="Department" value="@Model.Department" />
            </div>
            <button class="btn btn-primary" type="submit">Сохранить</button>
            <a class="btn btn-secondary ms-2" href="/Teachers/Index">Назад к списку</a>
        </form>
    </div>
</div>
